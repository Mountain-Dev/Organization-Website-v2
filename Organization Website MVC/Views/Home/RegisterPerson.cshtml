@model Organization_Website_MVC.Models.MemberRegistrationViewModel
@{
    ViewBag.Title = "RegisterPerson";
}

@using (Html.BeginForm())
{
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <div class="main-login main-center">
            <h1>Register Member:</h1>
            <h4>* = nessecary</h4>
            <form class="form-horizontal" name="registerPerson" method="post">
                <div class="form-group">
                    <div class="cols-sm-10">

                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                            @Html.TextBoxFor(m => m.person.person_first_name, new { data_bind = "Name", @class = "form-control", @placeholder = "First Name*" })<br />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                            @Html.TextBoxFor(m => m.person.person_last_name, new { data_bind = "Name", @class = "form-control", @placeholder = "Last Name*" })<br />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-phone fa" aria-hidden="true"></i></span>
                            @Html.TextBoxFor(m => m.person.person_phone_number, new { data_bind = "Name", @class = "form-control", @placeholder = "Phone number:" })<br />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-map-marker fa" aria-hidden="true"></i></span>
                            @Html.TextBoxFor(m => m.person.person_adress, new { data_bind = "Name", @class = "form-control", @placeholder = "Address:" })<br />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                            @Html.TextBoxFor(m => m.person.person_email, new { data_bind = "Name", @class = "form-control", @placeholder = "Email:" })<br />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <h4>Choose organization:*</h4>
                            @Html.DropDownListFor(m => m.connection.organization_id, new SelectList(Model.organizations, "organization_id", "organization_name"))
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="cols-sm-10">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-lg btn-block login-button" onclick="validateForm('registerPerson')">Register</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="col-sm-3"></div>
}
