@model organization
@{
    ViewBag.Title = "RegisterOrganization";
}

@using (Html.BeginForm())
{
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <h1>Register Organization:</h1>
        <hr />
        <div class="main-login main-center">
            <form class="form-horizontal" name="registerOrg" method="post">
                <div class="form-group">
                    <h2>Organization name:</h2>
                    <div class="col-sm-12">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                            @Html.TextBoxFor(m => m.organization_name, new { data_bind = "Name", @class = "form-control", @placeholder = "Organization name" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block login-button" onclick="validateForm('registerOrg')">Register</button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-lg-3"></div>
}